---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  insight: CollectionEntry<'insights'>;
}

const { insight } = Astro.props;
const { title, description, date, exhibition, category, tags, thumbnail, readingTime, impact } = insight.data;

const formattedDate = new Intl.DateTimeFormat('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(new Date(date));
---

<BaseLayout
  title={title}
  description={description}
  image={thumbnail}
  type="article"
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Hero Section -->
    <header class="mb-8">
      <div class="flex flex-wrap items-center gap-2 mb-4">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800 dark:bg-primary-900 dark:text-primary-200">
          {exhibition}
        </span>
        {category.map((cat) => (
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary-100 text-secondary-800 dark:bg-secondary-800 dark:text-secondary-200">
            {cat}
          </span>
        ))}
      </div>

      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4 leading-tight">
        {title}
      </h1>

      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-6">
        <time datetime={date.toISOString()}>
          <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
          {formattedDate}
        </time>

        {readingTime && (
          <span>
            <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            {readingTime}分で読める
          </span>
        )}
      </div>

      {thumbnail && (
        <div class="aspect-video w-full rounded-lg overflow-hidden mb-6">
          <img
            src={thumbnail}
            alt={`${title}のサムネイル画像`}
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
      )}

      {description && (
        <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mb-6">
          {description}
        </p>
      )}
    </header>

    <!-- Content -->
    <div class="prose prose-lg dark:prose-dark max-w-none">
      <slot />
    </div>

    <!-- Impact Analysis -->
    {impact && (
      <section class="mt-12 border-t border-gray-200 dark:border-gray-700 pt-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
          Impact Analysis
        </h2>
        <div class="grid md:grid-cols-2 gap-6">
          {impact.businessValue && (
            <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-6">
              <h3 class="font-semibold text-green-800 dark:text-green-200 mb-3">
                Business Value
              </h3>
              <div class="space-y-2">
                <div class="flex justify-between">
                  <span class="text-sm text-green-700 dark:text-green-300">Market Opportunity</span>
                  <div class="flex">
                    {Array.from({ length: 5 }).map((_, i) => (
                      <div class={`w-2 h-2 rounded-full mr-1 ${i < impact.businessValue.marketOpportunity ? 'bg-green-500' : 'bg-gray-300'}`} />
                    ))}
                  </div>
                </div>
                <div class="flex justify-between">
                  <span class="text-sm text-green-700 dark:text-green-300">Revenue Potential</span>
                  <div class="flex">
                    {Array.from({ length: 5 }).map((_, i) => (
                      <div class={`w-2 h-2 rounded-full mr-1 ${i < impact.businessValue.revenuePotential ? 'bg-green-500' : 'bg-gray-300'}`} />
                    ))}
                  </div>
                </div>
              </div>
            </div>
          )}

          {impact.implementationFeasibility && (
            <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-6">
              <h3 class="font-semibold text-blue-800 dark:text-blue-200 mb-3">
                Implementation Feasibility
              </h3>
              <div class="space-y-2">
                <div class="flex justify-between">
                  <span class="text-sm text-blue-700 dark:text-blue-300">Technical Complexity</span>
                  <div class="flex">
                    {Array.from({ length: 5 }).map((_, i) => (
                      <div class={`w-2 h-2 rounded-full mr-1 ${i < impact.implementationFeasibility.technicalComplexity ? 'bg-blue-500' : 'bg-gray-300'}`} />
                    ))}
                  </div>
                </div>
                <div class="flex justify-between">
                  <span class="text-sm text-blue-700 dark:text-blue-300">Resource Requirements</span>
                  <div class="flex">
                    {Array.from({ length: 5 }).map((_, i) => (
                      <div class={`w-2 h-2 rounded-full mr-1 ${i < impact.implementationFeasibility.resourceRequirements ? 'bg-blue-500' : 'bg-gray-300'}`} />
                    ))}
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>
      </section>
    )}

    <!-- Tags -->
    {tags && tags.length > 0 && (
      <section class="mt-8 border-t border-gray-200 dark:border-gray-700 pt-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3">
          Tags
        </h3>
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a
              href={`/tags/${tag}`}
              class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700 transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Navigation -->
    <nav class="mt-12 border-t border-gray-200 dark:border-gray-700 pt-8">
      <div class="flex justify-between items-center">
        <a
          href="/insights"
          class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 dark:text-gray-300 dark:bg-gray-800 dark:hover:bg-gray-700 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          All Insights
        </a>

        <div class="flex items-center space-x-2">
          <button
            class="p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-gray-100 dark:hover:bg-gray-800 transition-colors"
            title="Share this insight"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z" />
            </svg>
          </button>

          <button
            class="p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-gray-100 dark:hover:bg-gray-800 transition-colors"
            title="Print this insight"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 4v3H4a2 2 0 00-2 2v3a2 2 0 002 2h1v2a2 2 0 002 2h6a2 2 0 002-2v-2h1a2 2 0 002-2V9a2 2 0 00-2-2h-1V4a2 2 0 00-2-2H7a2 2 0 00-2 2zm8 0H7v3h6V4zM5 14H4v-2h1v2zm1 0v2h8v-2H6zM15 12h1v2h-1v-2z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    </nav>
  </article>
</BaseLayout>