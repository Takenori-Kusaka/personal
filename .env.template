# Digital Garden Automation System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===================================
# Required API Keys
# ===================================

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alternative name (either works)
# CLAUDE_API_KEY=your_claude_api_key_here

# Perplexity API Key
# Get yours at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ===================================
# Optional Configuration
# ===================================

# Whisper Transcription Settings
WHISPER_MODEL=kotoba-tech/kotoba-whisper-v2.0
WHISPER_DEVICE=auto  # auto, cpu, cuda, mps
TEST_WITH_WHISPER=false  # Set to 'true' to enable Whisper tests (requires model download)

# Performance Settings
MAX_CONCURRENT_TRANSCRIPTIONS=2
MAX_CONCURRENT_CLASSIFICATIONS=5
MAX_CONCURRENT_RESEARCH=3
MEMORY_LIMIT_MB=2048

# Git Automation Settings
GIT_AUTO_PUSH=true
GIT_CREATE_PR=true
GIT_MAIN_BRANCH=main

# Digital Garden Settings
DIGITAL_GARDEN_PATH=digital-garden
INPUT_PATH=input

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/automation.log

# ===================================
# Testing Configuration
# ===================================

# Test Mode
TEST_MODE=false

# Playwright Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOWMO=0

# Test Timeouts
TEST_TIMEOUT=300

# ===================================
# Development Settings
# ===================================

# Debug Mode
DEBUG=false

# Dry Run (no actual changes)
DRY_RUN=false